<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FaFaFa"
    tools:context=".BottomFragment">

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#ebebeb"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="C"
        android:textColor="#3a3a3a"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/buttonClearRecent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#c41442"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="="
        android:textSize="40sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonRoot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonDecimal"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonModulus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#ebebeb"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="%"
        android:textColor="#3a3a3a"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toStartOf="@+id/buttonDivide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonClearRecent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonClearRecent"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:backgroundTint="#ebebeb"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="CE"
        android:textColor="#3a3a3a"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/buttonModulus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#ebebeb"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="-"
        android:textColor="#3a3a3a"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiply"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonRoot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#ebebeb"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="√"
        android:textColor="#3a3a3a"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonEqual"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="2"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDecimal"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button7"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="7"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button8"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="8"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/buttonClearRecent"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="4"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button5"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="5"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button6"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="6"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/buttonMinus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="1"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="3"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEqual"
        app:layout_constraintEnd_toStartOf="@+id/buttonPlus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonDecimal"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="0"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonEqual"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button0"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="."
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonDecimal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button9"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FaFaFa"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="9"
        android:textColor="#292929"
        android:textSize="30sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/buttonMultiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/buttonModulus"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#ebebeb"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="+"
        android:textColor="#3a3a3a"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRoot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#ebebeb"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="x"
        android:textColor="#3a3a3a"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#ebebeb"
        android:stateListAnimator="@android:animator/fade_out"
        android:text="÷"
        android:textColor="#3a3a3a"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMultiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonModulus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:rippleColor="#747474"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>